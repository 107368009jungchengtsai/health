<script language="JavaScript">


function checkNameAndPassIsEmptyOrNot() 
{ 
	if ( document.getElementById("login_form").getElementsByTagName("userIDText") == "" && document.getElementById("login_form").getElementsByTagName("userPassText") == "") 
	{ 
		
		alert("請輸入帳號/密碼");
	}
	else if (document.getElementById("login_form").getElementsByTagName("userIDText") == "") 
	{ 
		
		alert("請輸入帳號"); 
	}
	else if (document.getElementById("login_form").getElementsByTagName("userPassText") == "") 
	{ 
		alert("請輸入密碼");
	}
	else
	{
		alert("something wrong!");
	}
} 

</script>


